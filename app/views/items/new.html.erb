<!-- Validation failure messages -->

<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Item</h3>
      </div>
      <div class="panel-body">
        <form action="/create_item" class="form-horizontal">
          <!-- Label and input for list_id -->
          <div class="form-group">
            <label for="list_id" class="col-sm-2 control-label">
              List
            </label>
            <div class="col-sm-10">
              <input type="text" id="list_id" name="list_id" placeholder="List" class="form-control" value="<%= @item.list_id %>">
            </div>
          </div>

          <!-- Label and input for star -->
          <div class="form-group">
            <label for="star" class="col-sm-2 control-label">
              Star
            </label>
            <div class="col-sm-10">
              <input type="text" id="star" name="star" placeholder="Star" class="form-control" value="<%= @item.star %>">
            </div>
          </div>

          <!-- Label and input for store_link -->
          <div class="form-group">
            <label for="store_link" class="col-sm-2 control-label">
              Store link
            </label>
            <div class="col-sm-10">
              <input type="text" id="store_link" name="store_link" placeholder="Store link" class="form-control" value="<%= @item.store_link %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @item.description %></textarea>
            </div>
          </div>

          <!-- Label and input for status -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Item" class="btn btn-success">
              or
              <a href="/items">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

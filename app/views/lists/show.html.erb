<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">List #<%= @list.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Title</dt>
              <dd><%= @list.title %></dd>

              <dt>Description</dt>
              <dd><%= @list.description %></dd>

              <dt>Expiration</dt>
              <dd><%= @list.expiration %></dd>

              <dt>Privacy</dt>
              <dd><%= @list.privacy %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/lists" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="#myModal" role="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
                <i class="fa fa-edit"></i>
              </a>

              <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                      <h4 class="modal-title" id="myModalLabel"><%= @list.title.titleize %></h4>
                    </div>
                    <div class="modal-body">
                      <!-- Label and input for title -->
                      <form role="form">
                        <div class="form-group">
                          <label for="title" class="col-sm-2 control-label">
                            Title
                          </label>
                          <div class="col-sm-10">
                            <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @list.title %>">
                          </div>
                        </div>

                        <!-- Label and input for description -->
                        <div class="form-group">
                          <label for="description" class="col-sm-2 control-label">
                            Description
                          </label>
                          <div class="col-sm-10">
                            <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @list.description %></textarea>
                          </div>
                        </div>

                        <!-- Label and input for expiration -->
                        <div class="form-group">
                          <label for="expiration" class="col-sm-2 control-label">
                            Expiration
                          </label>
                          <div class="col-sm-10">
                            <input type="text" id="expiration" name="expiration" placeholder="Expiration" class="form-control" value="<%= @list.expiration %>">
                          </div>
                        </div>

                        <!-- Label and input for privacy -->
                        <div class="form-group">
                          <label for="privacy" class="col-sm-2 control-label">
                            Privacy
                          </label>
                          <div class="col-sm-10">
                            <input type="text" id="privacy" name="privacy" placeholder="Privacy" class="form-control" value="<%= @list.privacy %>">
                          </div>
                        </div>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                  </div>
                </div>
              </div>

              <a href="/delete_list/<%= @list.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  #myModal .modal-body {max-height: 80vh;}
</style>

<!-- Validation failure messages -->

<% if @list.errors.any? %>
  <% @list.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add List</h3>
      </div>
      <div class="panel-body">
        <form action="/create_list" class="form-horizontal">
          <!-- Label and input for title -->
          <div class="form-group">
            <label for="title" class="col-sm-2 control-label">
              Title
            </label>
            <div class="col-sm-10">
              <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @list.title %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @list.description %></textarea>
            </div>
          </div>

          <!-- Label and input for expiration -->
          <div class="form-group">
            <label for="expiration" class="col-sm-2 control-label">
              Expiration
            </label>
            <div class="col-sm-10">
              <input type="text" id="expiration" name="expiration" placeholder="Expiration" class="form-control" value="<%= @list.expiration %>">
            </div>
          </div>

          <!-- Label and input for privacy -->
          <div class="form-group">
            <label for="privacy" class="col-sm-2 control-label">
              Who can see this list
            </label>
            <div class="col-sm-10">
              <select name="privacy">
                <option value="4">Only me</option>
                <option value="3">By access code</option>
                <option value="2">People who know my name</option>
                <option value="1">Everyone</option>
              </select>
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <div class="hidden">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @user_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create List" class="btn btn-success">
              or
              <a href="/lists">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
